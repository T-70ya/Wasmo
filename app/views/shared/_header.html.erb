<header class="app-header">
  <div class="app-search">
    <div class="app-name">
      <%= link_to image_tag("appname.png", class:"appname"), contents_path %>
    </div>
    <div class="search-form">
      <%= form_with url: search_path, method: :get, class: "form-search", local: true do |f| %>
        <%= f.text_field :keyword, {class:"search-text", placeholder: "キーワードを入力"} %>
        <%= button_tag type: :submit, class:"search-button" do %>
          <%= image_tag "search.png", class:"search-img" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="nav">
    <% if user_signed_in? %>
      <%= link_to current_user.username, '#', class:"user-name" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"logout"%>
    <% else %>
      <%= link_to "ログイン", user_session_path, class:"login"%>
      <%= link_to "新規登録", new_user_registration_path, class:"sign-up"%>
    <% end %>
  </div>
</header>
