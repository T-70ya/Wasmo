<div class="contents-money">
  <%= render "shared/header" %>
    <div class="money-contents">
      <div class="header-title">
        無駄遣い内容の編集
      </div>
      <div class="money-main">
        <%= form_with(model: @content, local: true) do |f| %>
          
          <div class="rough-contents">
            <div class="form-tag">
            タイトル
            <span class="mandatory">必須</span>
            </div>
            <%= f.text_field :title, class:"money-form", autofocus: true, placeholder:"タイトル名(15文字まで)", maxlength:"15" %>
            <div class="form-tag">
            使用金額
            <span class="mandatory">必須</span>
            </div>
            <%= f.text_field :money, class:"money-form", placeholder:"金額(999万9999円まで)", maxlength:"7" %>
          </div>

          <div class="time">
            <div class="form-tag">
            使用日
            <span class="mandatory">必須</span>
            </div>
          </div>

          <div class="date-time">
          <%= f.datetime_select :start_time, {}, class:"time-select" %>
          </div>

          <div class="btn-contents">
            <%= f.submit "編集する", class:"edit-submit-btn" %> 
            <%= link_to '戻る', content_path, class:"new-back-btn" %>
          </div>

        <% end %>
      </div>
      <div class="footer-title">
      <br />
      <br />
      <br />
      </div>
    </div>
  <%= render "shared/footer"%>
</div>
